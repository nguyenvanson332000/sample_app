<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t"static_pages.home.h3_html"%></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="container">
      <h1><%= t ".h1_html" %></h1>
      <%= link_to t(".sign_up"), signup_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
