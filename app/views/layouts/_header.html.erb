<header>
  <nav class="navbar fixed-top navbar-expand navbar-inverse">
  <div class="container">
    <%= link_to t("sample_app"), root_path, id: "logo" , class: "navbar-header navbar-brand" %>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t(".home"), static_pages_home_path %></li>
        <li class="nav-item"><%= link_to t(".help"), static_pages_help_path %></li>
        <li><%= link_to "English", locale:"en" %></li>
        <li><%= link_to "Vietnamese", locale:"vi" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".Users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
        </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
          <li class="nav-item"><%= link_to t(".signup"), signup_path %></li>
        <% end %>
      </ul>
  </div>
</nav>
</header>
