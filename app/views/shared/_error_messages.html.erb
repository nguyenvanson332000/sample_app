<% if @user.errors.any? %>
  <div id="error_explanation" class="row">
    <div class="alert alert-danger">
      <%= t ".please_resolve_errors", count: @user.errors.count %>:
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
